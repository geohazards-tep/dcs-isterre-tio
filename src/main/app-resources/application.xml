<?xml version="1.0" encoding="utf-8"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="tio">
  <jobTemplates>
    <jobTemplate id="job_aux">
      <streamingExecutable>/application/aux/run.sh</streamingExecutable>
      <defaultJobconf>
        <property id="ciop.job.max.tasks">1</property>
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="job_micmac">
      <streamingExecutable>/application/micmac/run.sh</streamingExecutable>
      <defaultJobconf>
        <property id="ciop.job.max.tasks">1</property>
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="job_tio">
      <streamingExecutable>/application/tio/run.sh</streamingExecutable>
      <defaultParameters>
        <parameter id="smoothing_coefficient" title="Smoothing coefficient" abstract="threshold = 0.0001" scope="runtime">0.003</parameter>
        <parameter id="rms_misclosure_threshold" title="RMS misclosure threshold" abstract="in rad?" scope="runtime">1.2</parameter>
        <parameter id="weighting_res_scaling_val" title="Scaling value for weighting residuals" abstract="1 / (res**2 + val**2)" scope="runtime">2</parameter>
        <parameter id="mask_large_residuals" title="Mask pixels of interferograms with large residuals" abstract="y: 0, n: 1" scope="runtime">1</parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">18000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="tio" title="TIO" abstract="Ground displacement time serie analysis tool">
    <workflowVersion>1.0</workflowVersion>
    <node id="node_aux">
      <job id="job_aux"/>
      <sources>
        <source id="input_ref" abstract="References to catalogue entries" title="References to catalogue entries" refid="string:list" scope="runtime">https://catalog.terradue.com//sentinel2/search?format=json&amp;uid=S2A_OPER_PRD_MSIL1C_PDMC_20160516T015231_R108_V20160515T103028_20160515T103028,https://catalog.terradue.com//sentinel2/search?format=json&amp;uid=S2A_OPER_PRD_MSIL1C_PDMC_20160718T061224_R008_V20160717T104026_20160717T104833,https://catalog.terradue.com//sentinel2/search?format=json&amp;uid=S2A_OPER_PRD_MSIL1C_PDMC_20160707T174208_R008_V20160707T104025_20160707T104025</source>
      </sources>
    </node>
    <node id="node_micmac">
      <job id="job_micmac"/>
      <sources>
        <source refid="wf:node">node_aux</source>
      </sources>
    </node>
    <node id="node_tio_ew">
      <job id="job_tio"/>
      <sources>
        <source refid="wf:node">node_micmac</source>
      </sources>
      <parameters>
        <parameter id="direction">EW</parameter>
      </parameters>
    </node>
    <node id="node_tio_ns">
      <job id="job_tio"/>
      <sources>
        <source refid="wf:node">node_micmac</source>
      </sources>
      <parameters>
        <parameter id="direction">NS</parameter>
      </parameters>
    </node>
  </workflow>
</application>
